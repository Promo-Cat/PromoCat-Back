<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="02-10-2020-1" author="Danil Lyskin">
        <createTable tableName="company">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
                Id
            </column>
            <column name="account_type" type="integer">
                <constraints nullable="false"/>
                Тип аккаунта
            </column>
            <column name="telephone" type="varchar(255)">Телефон</column>
            <column name="token" type="varchar(512)">Токен</column>
            <column name="organizationName" type="varchar(255)">Имя организации</column>
            <column name="inn" type="varchar(10)">ИНН</column>
            <column name="mail" type="varchar(255)">Почта</column>
            <column name="verified" type="boolean">Верефикация</column>
            <column name="company_status" type="integer">Статус компании</column>
        </createTable>
    </changeSet>


</databaseChangeLog>