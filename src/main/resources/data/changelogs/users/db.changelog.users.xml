<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="02-10-2020-1" author="Maxim Grankin">
        <createTable tableName="users">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
                Id
            </column>
            <column name="account_type" type="integer">
                <constraints nullable="false"/>
                Тип аккаунта
            </column>
            <column name="account" type="varchar(255)">Расчетный счет</column>
            <column name="status" type="integer">Статус пользователя</column>
            <column name="total_distance" type="double precision">Суммарная дистанция</column>
            <column name="total_earnings" type="double precision">Суммарный заработок</column>
        </createTable>
    </changeSet>
</databaseChangeLog>
