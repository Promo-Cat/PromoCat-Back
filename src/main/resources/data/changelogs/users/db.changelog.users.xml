<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="02-10-2020-1" author="Maxim Grankin">
        <createTable tableName="users">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
                Id
            </column>
            <column name="account_type" type="integer">
                <constraints nullable="false"/>
                Тип аккаунта
            </column>
            <column name="account" type="varchar(23)">Расчетный счет</column>
            <column name="inn" type="varchar(12)">
                <constraints unique="true"/>
                ИНН
            </column>
            <column name="token" type="varchar(512)">
                <constraints unique="true"/>
                Токе
            </column>
            <column name="telephone" type="varchar(255)">
                <constraints unique="true"/>
                Телефон
            </column>
            <column name="status" type="integer">Статус пользователя</column>
            <column name="tax_connection_id" type="integer">
                <constraints unique="true"/>
                Id подключения к налоговой
            </column>
            <column name="total_distance" type="double precision">Суммарная дистанция</column>
            <column name="total_earnings" type="double precision">Суммарный заработок</column>
            <column name="stock_city_id" type="bigint">Id города в которой проходит акция</column>
            <column name="city" type="bigint">Id города пользователя</column>
            <column name="balance" type="double precision">
                <constraints checkConstraint="CHECK (balance &gt;=0)"/>
                Баланс
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="users" baseColumnNames="stock_city_id"
                                 constraintName="fk1q0l4a3t1mls9a64b2h988f6o"
                                 referencedTableName="stock_city"
                                 referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="users" baseColumnNames="city"
                                 constraintName="fkcs9whtendqffwjvjel7jybj2m"
                                 referencedTableName="city"
                                 referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>
