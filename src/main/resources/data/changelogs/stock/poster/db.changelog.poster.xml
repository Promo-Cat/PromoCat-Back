<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="1" author="Maxim Grankin">
        <createTable tableName="poster">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
                Id постера
            </column>
            <column name="data_type_poster" type="varchar(255)">Тип постера.</column>
            <column name="file_name_poster" type="varchar(255)">Имя постера.</column>
            <column name="poster" type="blob">Байтовое представление постера.</column>

            <column name="data_type_preview" type="varchar(255)">Тип превью постера.</column>
            <column name="file_name_preview" type="varchar(255)">Имя превью постера.</column>
            <column name="preview" type="blob">Байтовое представление превью постера.</column>
        </createTable>
    </changeSet>
</databaseChangeLog>
