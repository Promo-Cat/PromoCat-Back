            <column name="fare" type="double precision">Коммиссия</column>
            <column name="postpayment" type="double precision">Постоплата</column>
            <column name="prepayment" type="double precision">Предоплата</column>
        </createTable>
    </changeSet>
</databaseChangeLog>
