<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="02-10-2020-1" author="Danil Lyskin">
        <createTable tableName="movement">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
                Id
            </column>
            <column name="date" type="date">
                <constraints nullable="false"/>
                Дата
            </column>
            <column name="distance" type="double precision">
                <constraints nullable="false"/>
                Дистанция
            </column>
            <column name="earnings" type="double precision">
                <constraints nullable="false"/>
                Заработок
            </column>
        </createTable>
        <sql>
            ALTER TABLE movement ADD CONSTRAINT distance CHECK (balance &gt;=0)
            ALTER TABLE movement ADD CONSTRAINT earnings CHECK (balance &gt;=0)
        </sql>

        <addForeignKeyConstraint baseTableName="movement" baseColumnNames="stock_id"
                                 constraintName="fkkj31ntb3w3nwpopf4iykdulvu"
                                 referencedTableName="stock"
                                 referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="movement" baseColumnNames="user_id"
                                 constraintName="fkk0rm0x6ltbbvognho3xas4sqa"
                                 referencedTableName="users"
                                 referencedColumnNames="id"/>
    </changeSet>


</databaseChangeLog>